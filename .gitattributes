# Auto detect text files and perform LF normalization
* text=auto

# Force Windows line endings for these files
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Force Unix line endings for these files
*.sh text eol=lf
*.md text eol=lf
*.json text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
